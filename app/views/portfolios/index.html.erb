<p>Portfolio Item</p>
<a href="portfolios/new">Create a new Item</a>
<%= link_to "Create a new Item",new_portfolio_path %>
<p><% new_portfolio_path %></p>



<% @portfolios_item.each do |porfolio_item|  %>
<p><%=  link_to porfolio_item.title,portfolio_path(porfolio_item) %></p>
<p><%= porfolio_item.subtitle %></p>
<p><%= porfolio_item.body %></p>
<%= image_tag  porfolio_item.thumb_image unless porfolio_item.thumb_image.nil? %>
<%= link_to "Edit",edit_portfolio_path(porfolio_item)  %>
<a href="/portfolios/<%=porfolio_item.id %>/edit"%>Edit two</a>
<%= link_to "Delete Portfolio items",portfolio_path(porfolio_item),method: :delete, data:{confirm: 'are you sure?'}  %>
<% end %>
